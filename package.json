{
  "name": "smart-news-search",
  "version": "1.0.0",
  "description": "An intelligent web tool for real-time searching of national and international news.",
  "scripts": {
    "dev": "npx esbuild index.tsx --bundle --outfile=build/index.js --format=esm --jsx=automatic --servedir=. --serve=5001 --define:process.env.API_KEY='\"%API_KEY%\"'",
